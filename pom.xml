		<dependency>
			<groupId>org.codice.alliance</groupId>
			<artifactId>stanag4609</artifactId>
			<version>0.3.6</version>
		</dependency>


		<!-- https://mvnrepository.com/artifact/org.hamcrest/hamcrest-all -->
