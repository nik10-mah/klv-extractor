	<dependencies>
		<!-- https://mvnrepository.com/artifact/org.codice.alliance/klv -->
		<!-- <dependency> <groupId>org.codice.alliance</groupId> <artifactId>klv</artifactId> 
			<version>0.3.6</version> </dependency> -->

